apiVersion: v1
kind: Pod
metadata:
  name: ${NAME}
  labels:
    app: ${NAME}
spec:
  containers:
  $(for contnum in $(seq 1 ${CONTCOUNT}); do echo "
  - name: ${NAME}c$(( contnum - 1 ))
    image: busybox
    imagePullPolicy: IfNotPresent
    command:
      - sh
      - -c
      - echo ${NAME}c$(( contnum - 1 )); trap 'exit 0' SIGUSR1; sleep 999999999 & wait
    resources:
      requests:
        cpu: ${CPU}
        memory: '${MEM}'
      limits:
        cpu: ${CPU}
        memory: '${MEM}'
  "; done )
  terminationGracePeriodSeconds: 1
  restartPolicy: Always
